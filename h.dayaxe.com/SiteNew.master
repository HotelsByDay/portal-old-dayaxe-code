<%@ Master Language="C#" AutoEventWireup="true" CodeFile="SiteNew.master.cs" Inherits="h.dayaxe.com.SiteNew" %>
<%@ Import Namespace="System.Web.Optimization" %>

<!DOCTYPE html>
<html lang="en">
<head runat="server">
