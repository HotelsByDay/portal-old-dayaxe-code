    <script>
        window.updateUrl = '<%=UpdateUrl%>';
    </script>
    <%: Scripts.Render("~/bundles/jquery") %>
    <%: Scripts.Render("~/bundles/jqueryui") %>
    <script src="/Scripts/custom.js?v=1"></script>
